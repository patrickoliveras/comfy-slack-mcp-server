{
  "name": "@zencoderai/slack-mcp-server",
  "version": "0.0.0-dev",
  "description": "MCP server for interacting with Slack",
  "license": "Apache-2.0",
  "author": "Zencoder AI (https://zencoder.ai)",
  "homepage": "https://zencoder.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/zencoderai/slack-mcp-server"
  },
  "bugs": "https://github.com/zencoderai/slack-mcp-server/issues",
  "type": "module",
  "bin": {
    "slack-mcp": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc && shx chmod +x dist/*.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "node scripts/husky-install.mjs",
    "watch": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "express": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.0.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  }
}
